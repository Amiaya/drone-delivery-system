{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
   "lib": ["es2017", "esnext.asynciterable", "ES2021"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@app/config/*": ["config/*"],
      "@app/http/*": ["http/*"],
      "@app/internal/*": ["internal/*"],
      "@app/jobs": ["jobs/"],
      "@app/drones": ["drones/"],
      "@app/medications": ["medications/"],
      "@app/orders": ["orders/"],
      "@app/order-medications": ["order-medications/"],
    },
    "typeRoots": ["./node_modules/@types", "typings"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": ["typings/**/*.d.ts", "src/**/*", "test/**/*"]
}
